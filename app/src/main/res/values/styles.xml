<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardTitleText" parent="AppTheme">
        <item name="android:textColor">@color/colorCardTitleText</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
    </style>

    <style name="CardSubtitleText" parent="AppTheme">
        <item name="android:textColor">@color/colorCardTitleText</item>
        <item name="android:textSize">@dimen/card_subtitle_text_size</item>
    </style>


</resources>
