<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/walk_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/walk_end_walk_button"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/walk_distance_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_grid_margin">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/walk_distance_label"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_two_line_image_vertical_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/walk_summary_map"
                        app:layout_constraintEnd_toStartOf="@id/walk_distance_text"
                        tools:text="Walk Distance" />

                    <TextView
                        android:id="@+id/walk_distance_text"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_two_line_image_vertical_margin"
                        app:layout_constraintTop_toTopOf="@id/walk_distance_label"
                        app:layout_constraintBottom_toBottomOf="@id/walk_distance_label"
                        app:layout_constraintStart_toEndOf="@id/walk_distance_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="1.0 mi" />

                    <ImageView
                        android:id="@+id/walk_summary_map"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@id/walk_distance_label"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <include layout="@layout/card_walk_photos" />

            <include layout="@layout/card_walk_dogs_list" />
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/walk_end_walk_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walk_scroll_view"
        tools:text="Send Summary" />

</android.support.constraint.ConstraintLayout>